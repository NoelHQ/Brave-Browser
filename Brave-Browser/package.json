{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "brave",
  "title": "Brave",
  "description": "Search and open tabs and history in Brave.",
  "icon": "google_chrome-icon.png",
  "author": "Codely",
  "contributors": [
    "bromanko"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "brave-go-to-tab",
      "title": "Search Tabs",
      "subtitle": "Brave",
      "description": "List all tabs and go to the selected.",
      "mode": "view"
    },
    {
      "name": "brave-search-history",
      "title": "Search History",
      "subtitle": "Brave",
      "description": "Search browser history.",
      "mode": "view"
    },
    {
      "name": "brave-new-tab",
      "title": "New Tab",
      "subtitle": "Brave",
      "description": "Open a new Brave tab.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "useOriginalFavicon",
      "title": "Search Open Tabs",
      "title": "Fav icon",
      "label": "Extract the favicon from every open tab",
      "description": "Before enable this, you should enable 'View > Developer > Allow JavaScript from Apple Events' in every Brave profile.",
      "required": false,
      "type": "checkbox",
      "default": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.25.0",
    "run-applescript": "^6.0.0",
    "sql.js": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@types/sql.js": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
